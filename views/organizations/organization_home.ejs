<script>

    var token = localStorage.getItem("token");
    var id;
    
    if (!!token) {
        $.ajax({
            type: "GET",
            url: `/users/${token}`,
            dataType: "json",
            success: function (data) {

                $("#org_id").text(data.student_id);
                // $("#nic").text(data.nic);
                // $("#phone_number").text(data.phone_number);
                // $("#email").text(data.email);
                // $("#photo").src(data.photo);
                // ("#cv").text(data.cv);
