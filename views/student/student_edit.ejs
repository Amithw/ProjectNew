    <script>
        $("#studentUpdate").click(function () {

            var status_value;
            var rates = document.getElementsByName('status');
            rates.forEach(function (item) {
                if (item.checked) {
                    status_value = item.value;
                }
            });


            var status = status_value;
            var id = $("#id").val();
            var f_name = $("#f_name").val();
            var l_name = $("#l_name").val();
            var phone_number = $("#phone_number").val();
            var technical_skills = $("#technical_skills").val();
            var cv = $("#cv").val();
            var university = $("#university").val();
            var description = $("#description").val();
            // var linkedin = $("#linkedin").val();


            var studentUpdate = {
                id: id,
                f_name: f_name,
                l_name: l_name,
                phone_number: phone_number,
                technical_skills: technical_skills,
                cv: cv,
                university: university,
                status: status,
                description: description

                //   linkedin:linkedin


            };


            console.log(`${f_name} ${id} ${university} `);

            $.ajax({
                type: "POST",
                url: `/student_edit/${id}`,
                dataType: "json",
                data: studentUpdate,
                success: function (data) {

                    // console.log(data);
                  //  window.location.replace("../student/home");

                },
                error: function () {
                    console.log("error from the method");
                    window.location.replace("../google/student");
                }
            });
        });

   
    $("#logout").click(function () {
