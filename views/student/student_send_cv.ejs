                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3> Student Send CV</h3>
                        </div>
                        <div class="panel-body">
                            <div class="row1">
                                <div class="col-lg-9">

                                    <form>
                                            <p id="error1" style="color:red"></p>
                                        <input type="hidden" class="form-control" id="org_id" value="<%= id %>" />

                                        <input type="hidden" class="form-control" id="std_id" value="<%= user.id %>" />

                                        <input type="hidden" class="form-control" id="f_name" value="<%= user.f_name %>" />

                                        <input type="hidden" class="form-control" id="l_name" value="<%= user.l_name %>" />

                                        <input type="hidden" class="form-control" id="view" value="no" />
                                        <label for="lable-control">CV Link</label><br>
                                        <input type="text" class="form-control" id="cv" value="<%= user.cv %>" required /><br>
                                        <label for="lable-control">Job Title</label><br>
                                        <input type="text" class="form-control" id="job_title" value="<%= user.job_title %>"
                                            required /><br>
                                        <label for="lable-control">Technical Skills</label><br>
                                        <input type="text" class="form-control" id="skills" value="<%= user.technical_skills %>"
                                            required /><br>
                                        <label for="lable-control">Phone Number</label><br>
                                        <input type="text" class="form-control" id="phone_number" value="<%= user.phone_number %>"
                                            required /><br>
                                        <label for="lable-control">E-Mail </label><br>
                                        <input type="email" class="form-control" id="email" value="<%= user.email %>"
                                            required /><br>

                                        <input type="button" class="bttn-pill bttn-md bttn-primary" id="sendCv" value="Send">

                                    </form>

                                    <% include _script_links %>
                                    <script>

                                        function ValidateEmail(email) {

                                            if (!(/^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/.test(email))) {
                                                return (true)
                                            }

                                            return (false)
                                        }

                                        $("#sendCv").click(function () {

                                            if ($("#f_name").val() == "" || $("#l_name").val() == "" || $("#phone_number").val() == "" || $("#skills").val() == "" || $("#cv").val() == "" || $("#university").val() == "" || $("#email").val() == "" || $("#job_title").val() == "") {

                                                document.getElementById("error1").textContent = "Fill the all field";

                                            }


                                            else if (ValidateEmail($("#email").val())) {
                                                alert("You have entered an invalid email address!");
                                            }
                                            else {



                                                var org_id = $("#org_id").val();
                                                var std_id = $("#std_id").val();
                                                var f_name = $("#f_name").val();
                                                var l_name = $("#l_name").val();
                                                var phone_number = $("#phone_number").val();
                                                var skills = $("#skills").val();
                                                var cv = $("#cv").val();
                                                var view = $("#university").val();
                                                var job_title = $("#job_title").val();
                                                var email = $("#email").val();

                                                if (!(/^\d{10}$/.test(phone_number))) {
                                                    alert("Invalid phone number; must be ten digits");
                                                    number.focus()
                                                    return false

                                                }

                                                else if (!(/(http(s)?:\/\/.)?(www\.)?[-a-zA-Z0-9@:%._\+~#=]{2,256}\.[a-z]{2,6}\b([-a-zA-Z0-9@:%_\+.~#?&//=]*)/.test(cv))) {

                                                    alert("Invalid CV URL");
                                                    web.focus()
                                                    return false
                                                }

                                                else {


                                                    var sendCv = {
                                                        org_id: org_id,
                                                        std_id: std_id,
                                                        f_name: f_name,
                                                        l_name: l_name,
                                                        phone_number: phone_number,
                                                        skills: skills,
                                                        cv: cv,
                                                        view: view,
                                                        job_title: job_title,
                                                        email: email


                                                    };

                                                    $.ajax({
                                                        type: "POST",
                                                        url: `/student_send_cv/${org_id}`,
                                                        dataType: "json",
                                                        data: sendCv,
                                                        success: function (data) {

                                                            console.log(data);
                                                            window.location.replace("../google/student");
                                                        },
                                                        error: function () {
                                                            console.log("error from the method");
                                                            window.location.replace("/student_home");
                                                        }
                                                    });
                                                }
                                            }
                                        });



                                        $("#logout").click(function () {
                                            localStorage.clear("token");
                                            window.location.replace("/");
                                        });

                                    </script>
</body>

