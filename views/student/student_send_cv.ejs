    <script>
        $("#sendCv").click(function () {

            var org_id = $("#org_id").val();
            var std_id = $("#std_id").val();
            var f_name = $("#f_name").val();
            var l_name = $("#l_name").val();
            var phone_number = $("#phone_number").val();
            var skills = $("#skills").val();
            var cv = $("#cv").val();
            var view = $("#university").val();
            var job_title = $("#job_title").val();
            var email = $("#email").val();




            var sendCv = {
                org_id: org_id,
                std_id: std_id,
                f_name: f_name,
                l_name: l_name,
                phone_number: phone_number,
                skills: skills,
                cv: cv,
                view: view,
                job_title: job_title,
                email: email


            };

            $.ajax({
                type: "POST",
                url: `/student_send_cv/${org_id}`,
                dataType: "json",
                data: sendCv,
                success: function (data) {

                    console.log(data);
                    window.location.replace("../google/student");
                },
                error: function () {
                    console.log("error from the method");
                    window.location.replace("/student_home");
                }
            });
        });


   
